# ============= CONFIGURAÇÕES DE AMBIENTE =============
# Copie este arquivo para .env e configure suas variáveis

# ============= AMBIENTE =============
NODE_ENV=development
PORT=3000
HOST=localhost

# ============= FIREBASE CONFIGURATION =============
# Não colocar chaves sensíveis aqui - usar apenas para desenvolvimento
FIREBASE_PROJECT_ID=gestao-de-infraestrutura-4ee4a
FIREBASE_AUTH_DOMAIN=gestao-de-infraestrutura-4ee4a.firebaseapp.com

# ============= DESENVOLVIMENTO =============
DEBUG_MODE=true
ENABLE_LOGGING=true
CACHE_DISABLED=true
AUTO_RELOAD=true

# ============= GOOGLE SHEETS (Opcional - se usar integração externa) =============
GOOGLE_SHEETS_API_KEY=your_api_key_here
SHEET_ID=your_sheet_id_here
REFRESH_INTERVAL=30000

# ============= CORS =============
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000

# ============= RATE LIMITING =============
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============= LOGS =============
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ============= CACHE =============
CACHE_TTL=3600
ENABLE_CACHE=false