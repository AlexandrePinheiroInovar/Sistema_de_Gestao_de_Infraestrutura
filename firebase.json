{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "backups/**",
      "server.js",
      "*.log",
      "package*.json",
      "deploy.sh",
      "deploy-simple.bat",
      "functions/**",
      "DEPLOY_MANUAL.md",
      "deploy-instructions.md",
      "PERMISSIONS_GUIDE.md",
      "firebase-init.js",
      "firebase-config.js"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}