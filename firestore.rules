rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Coleção de usuários - apenas o próprio usuário pode ler/editar seus dados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Dados do sistema - requer autenticação
    match /sistema/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Endereços - permissões baseadas em roles
    match /enderecos/{enderecoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (getUserRole() == 'admin' || getUserRole() == 'gestor');
    }
    
    // Gestão de projetos - apenas admins têm acesso completo
    match /gestao/{gestaoId} {
      allow read: if request.auth != null && 
        (getUserRole() == 'admin' || getUserRole() == 'gestor');
      allow write: if request.auth != null && getUserRole() == 'admin';
    }
    
    // Função auxiliar para obter role do usuário
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
  }
}